{
  "name": "react-jsx-i18n",
  "version": "0.1.3",
  "description": "Provides gettext-enhanced React components, a babel plugin for extracting the strings and a script to compile translated strings to a format usable by the components.",
  "main": "client/index.js",
  "scripts": {
    "build": "rm -rf client/ tools/ && babel src/ --out-dir ./ && chmod +x tools/cli.js",
    "prepare": "npm run build",
    "eslint": "eslint --ext .js --ext .jsx src/ tests/ test-data/",
    "update-test-data": "./update-test-data.sh",
    "test": "jest tests/ --coverage"
  },
  "bin": {
    "react-jsx-i18n": "./tools/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/indico/react-jsx-i18n.git"
  },
  "keywords": [
    "react",
    "jsx",
    "i18n",
    "gettext"
  ],
  "author": "Indico Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/indico/react-jsx-i18n/issues"
  },
  "homepage": "https://github.com/indico/react-jsx-i18n#readme",
  "dependencies": {
    "babel-plugin-extract-text": "^0.4.0",
    "chalk": "^2.4.2",
    "gettext-parser": "^1.4.0",
    "lodash.uniq": "^4.5.0",
    "moment-timezone": "^0.5.25",
    "node-glob": "^1.2.0",
    "yargs": "^11.1.0"
  },
  "peerDependencies": {
    "@babel/core": "*",
    "@babel/preset-react": "*",
    "react": "*",
    "prop-types": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^22.4.3",
    "eslint": "^5.16.0",
    "eslint-config-indico": "^1.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-react": "github:ThiefMaster/eslint-plugin-react#jsx-props",
    "jed": "^1.1.1",
    "jest": "^24.6",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-test-renderer": "^16.8.6"
  },
  "jest": {
    "setupFiles": [
      "./tests/setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test-data/",
      "/tests/setup.js"
    ]
  }
}
